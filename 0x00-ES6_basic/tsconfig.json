{
  "$schema": "./tsconfig_schema.json",
	"compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "allowJs": true,
    "outDir": "./out/"
  },
  "include": ["**/*.js", "**/*.ts"],
  "exclude": ["node_modules"]
}